@model BookPostGeneralDto
@{
    ViewData["Title"] = "Update";
}

<div class="container mt-3">
    <h2>Create author</h2>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Books.Name" class="form-label">Enter name</label>
            <input asp-for="@Model.Books.Name" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.Books.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Books.ImageFile" class="form-label">Book image</label>
            <input required asp-for="@Model.Books.ImageFile" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="mt-4 text text-danger" asp-validation-for="@Model.Books.ImageFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Books.Language" class="form-label">Enter language</label>
            <input asp-for="@Model.Books.Language" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.Books.Language"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Books.SalePrice" class="form-label">Enter sale price</label>
            <input asp-for="@Model.Books.SalePrice" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.Books.SalePrice"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Books.CostPrice" class="form-label">Enter cost price</label>
            <input asp-for="@Model.Books.CostPrice" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.Books.CostPrice"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Books.PageCount" class="form-label">Enter page count</label>
            <input asp-for="@Model.Books.PageCount" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.Books.PageCount"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Books.AuthorId" class="form-label">Select Author</label>
            <select asp-for="@Model.Books.AuthorId" class="form-select">
                @foreach (var item in Model.Authors.Items)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Books.AuthorId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Books.GenreId" class="form-label">Select Genre</label>
            <select asp-for="@Model.Books.GenreId" class="form-select">
                @foreach (var item in Model.Genres.Items)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Books.GenreId"></span>
        </div>
        <div class="d-flex mt-4">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="author" asp-action="index" class="btn btn-dark btn-icon-text mx-3">
                Go to back
            </a>
        </div>
    </form>
</div>


