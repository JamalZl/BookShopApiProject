@model AuthorPostDto
@{
    ViewData["Title"] = "Create";
}
<div class="container mt-3">
    <h2>Create author</h2>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Enter author</label>
            <input asp-for="@Model.Name" accept="image/*" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="text text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ImageFile" class="form-label">Speaker image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
            <span style="margin-top:10px;display:inline-block" class="mt-4 text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
        <div class="d-flex mt-4">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="author" asp-action="index" class="btn btn-dark btn-icon-text mx-3">
                Go to back
            </a>
        </div>
    </form>
</div>
